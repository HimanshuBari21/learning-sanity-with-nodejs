<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>My Shop</title>

  <% 
    function replaceLast(str, oldChar, newChar) {
    str = str.substring(6)
    return str.substring(0, str.lastIndexOf(oldChar)) + newChar + str.substring(str.lastIndexOf(oldChar) + 1)}
%>

</head>
<body>  
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>My Shop</h1>
        <p>My shop is the best shop in the world</p>
      </div>
    </div>
    <!-- create product list -->
    <div class="row">
      <% tshirt.forEach(EachTShirt=> { %>
      <div class="col-lg-4">
        <div class="card">
          <img src="https://cdn.sanity.io/images/0x6zl8tm/tshirts/<%= replaceLast(EachTShirt.img.asset._ref, "-", "." ) %>" alt="<%= EachTShirt.name %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= EachTShirt.name %></h5>
            <p class="card-text">Rs. <%= EachTShirt.price %></p>
            <% if (EachTShirt.cotton) { %>
            <p class="card-text">100% Cotton</p>
            <% } %>
            <a href="#" class="btn btn-primary">Add to Cart</a>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
</div>
  
</body>
</html>